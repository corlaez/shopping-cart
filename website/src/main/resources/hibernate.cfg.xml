        <mapping class="com.cesarmando.website.dao.model.AddressE"/>
        <mapping class="com.cesarmando.website.dao.model.CardInfoE"/>
        <mapping class="com.cesarmando.website.dao.model.ConfigE"/>
        <mapping class="com.cesarmando.website.dao.model.OrderE"/>
        <mapping class="com.cesarmando.website.dao.model.OrderAddressE"/>
        <mapping class="com.cesarmando.website.dao.model.OrderDetailE"/>
        <mapping class="com.cesarmando.website.dao.model.PaymentE"/>
        <mapping class="com.cesarmando.website.dao.model.PaymentTypeE"/>
        <mapping class="com.cesarmando.website.dao.model.PersonE"/>
        <mapping class="com.cesarmando.website.dao.model.ProductE"/>
        <mapping class="com.cesarmando.website.dao.model.ProductTypeE"/>
        <mapping class="com.cesarmando.website.dao.model.UserE"/>
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
